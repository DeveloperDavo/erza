upstream echo {
    server echo:4000 max_fails=1 fail_timeout=15s;
}

{{ template "acme-challenge" .Env.ECHO_HOST }}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ getenv "ECHO_HOST" }};

    keepalive_timeout 5;
    client_max_body_size 10M;

    ssl_certificate           /cert/live/{{ getenv "ECHO_HOST" }}/fullchain.pem;
    ssl_certificate_key       /cert/live/{{ getenv "ECHO_HOST" }}/privkey.pem;
    ssl_trusted_certificate   /cert/live/{{ getenv "ECHO_HOST" }}/chain.pem;

    location / {
        proxy_pass http://echo;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
    }
}
